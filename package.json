{
  "name": "health-tracker",
  "version": "0.1.0",
  "description": "A modern, privacy-first Progressive Web App for tracking daily health metrics and habits",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run",
    "test:e2e": "node scripts/cross-browser-test.js",
    "test:iphone": "node scripts/capture-screenshots.js",
    "generate:icons": "node scripts/generate-icons.js",
    "lint": "eslint src/ scripts/",
    "lint:fix": "eslint src/ scripts/ --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\" \"scripts/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\" \"scripts/**/*.js\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "scripts/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,html}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "health",
    "tracker",
    "habits",
    "pwa",
    "mobile",
    "wellness"
  ],
  "author": {
    "name": "Monique Dubbelman",
    "url": "https://github.com/mdubbelm"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdubbelm/habittracker.git"
  },
  "bugs": {
    "url": "https://github.com/mdubbelm/habittracker/issues"
  },
  "homepage": "https://github.com/mdubbelm/habittracker#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "sharp": "^0.34.5",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^4.0.14"
  }
}
