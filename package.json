{
  "name": "health-tracker",
  "version": "0.1.0",
  "description": "A modern, privacy-first Progressive Web App for tracking daily health metrics and habits",
  "type": "module",
  "scripts": {
    "dev": "echo 'Development server - to be implemented in Phase 0'",
    "build": "echo 'Build script - to be implemented in Phase 0'",
    "preview": "echo 'Preview build - to be implemented in Phase 0'",
    "test": "echo 'Tests - to be implemented in Phase 0'",
    "test:unit": "echo 'Unit tests - to be implemented in Phase 0'",
    "test:e2e": "echo 'E2E tests - to be implemented in Phase 0'",
    "test:iphone": "echo 'iPhone 13 tests - to be implemented in Phase 0'",
    "lint": "eslint src/ scripts/",
    "lint:fix": "eslint src/ scripts/ --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\" \"scripts/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\" \"scripts/**/*.js\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "scripts/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,html}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "health",
    "tracker",
    "habits",
    "pwa",
    "mobile",
    "wellness"
  ],
  "author": {
    "name": "Monique Dubbelman",
    "url": "https://github.com/mdubbelm"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdubbelm/habittracker.git"
  },
  "bugs": {
    "url": "https://github.com/mdubbelm/habittracker/issues"
  },
  "homepage": "https://github.com/mdubbelm/habittracker#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2"
  }
}
